@*Предствление главной страницы*@
@model IEnumerable<Contact>

<h2>Список контактов</h2>
<a method="post" asp-action="Index" asp-controller="NewContact">
    <input type="submit" value="Добавить контакт" />
</a>
<body>
    @*Создание таблицы*@
    <table class="table">
        <tr wight="10px"><th>id</th><th>Фамилия</th><th>Имя</th><th>Отчество</th></tr>
        @foreach (var item in Model)
        {
            <tr>

                <td> <a method="post" asp-controller="CertainContact" asp-action="Index" asp-route-id="@item.Id"> @item.Id </a></td>  @*Ссылка на карточку контакта*@
                <td>@item.Surname</td>
                <td>@item.Name</td>
                <td>@item.Patronimic</td>
            </tr>
        }
    </table>
    </body>